<header class="mb-6 text-center print:hidden">
  <h1 class="font-bold text-2xl/tight">
    <%= pluralize(@orders.count, 'Confirmed Order') %>
  </h1>
  <p class="md:text-lg tracking-tight">
    <% if params[:date].present? %>
      <%= local_date(sanitize(params[:date])) %>
    <% end %>
    <% if params[:start_date].present? %>
      <%= local_date(sanitize(params[:start_date])) %> â€“ <%= local_date(sanitize(params[:end_date])) %>
    <% end %>
  </p>
  <div class="mt-4 flex items-center justify-center gap-4">
    <%= button_tag 'Click to print', data: { controller: 'print', action: 'click->print#launch' }, class: 'btn' %>
  </div>
</header>

<div class="mx-auto max-w-screen-md space-y-6">
  <% @orders.each do |order| %>
    <%= render partial: 'sheet', locals: { order: order } %>
  <% end %>
</div>
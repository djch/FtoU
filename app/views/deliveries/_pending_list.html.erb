<%# app/views/deliveries/_pending_list.html.erb %>
<%= turbo_frame_tag 'pending_section' do %>
  <section class="relative min-h-[40svh] overflow-y-scroll mb-8 bg-amber-50 p-4">
    <h2 class="text-lg md:text-xl mb-4 text-center">
      Pending Orders
      <% if @pending_orders.present? %>
        <%= badge_tag(@pending_orders.count, extra_classes: 'ml-1 text-sm/none bg-amber-600') %>
      <% end %>
    </h2>
    <%= turbo_frame_tag 'pending_list' do %>
      <% if @pending_orders.present? %>
        <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-4">
          <%= render partial: 'deliveries/order', collection: @pending_orders %>
        </ul>
      <% else %>
        <p class="my-8">ğŸ‘ All pending orders have been scheduled</p>
      <% end %>
    <% end %>
  </section>
<% end %>
<%# app/views/deliveries/_order.html.erb %>
<li id="<%= dom_id order %>" class="relative group p-4 bg-white border border-stone-500/10 shadow-sm hover:bg-stone-100">
  <%= link_to edit_delivery_path(order), data: { turbo_frame: "pending_list" }, class: "no-underline" do %>
    <p class="font-semibold text-lg/6">Order #<%= order.id %></p>
    <dl class="mt-1 flex flex-col text-stone-600 xl:flex-row text-base/6 tracking-tight">
      <div class="flex items-start">
        <dt class="mt-0.5">
          <span class="sr-only">Customer</span>
        </dt>
        <dd><%= order.customer.name.familiar %> <%= local_time_ago(order.created_at) %></dd>
      </div>
    </dl>
  <% end %>
</li>
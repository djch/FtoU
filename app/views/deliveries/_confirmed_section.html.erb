<%# app/views/deliveries/_confirmed-section.html.erb %>
<div class="relative mt-4 lg:col-span-7 xl:col-span-8">
  <%= turbo_frame_tag 'confirmed_list' do %>
    <section class="h-[48rem] overflow-y-auto px-8 pb-6 border border-stone-500/30 shadow-sm dark:border-stone-300/50">
      <header class="sticky top-0 inset-x-0 z-50 bg-white/80 backdrop-blur py-6 border-b dark:border-stone-400 dark:bg-stone-900">
        <h2 class="text-lg md:text-xl flex gap-2 items-center sm:justify-between">
          <%= local_date(@selected_date, format: '%A, %B %-d %Y') %>
          <%= badge_tag(@orders.count, extra_classes: 'text-sm/none bg-orange-700') %>
        </h2>
      </header>
      <% if @orders.present? %>
        <ol class=" leading-6 divide-y divide-stone-200 dark:divide-stone-400/30">
          <%= render partial: 'deliveries/delivery', collection: @orders %>
        </ol>
      <% else %>
        <p class="my-8">No deliveries scheduled for this date.</p>
      <% end %>
    </section>
  <% end %>
</div>
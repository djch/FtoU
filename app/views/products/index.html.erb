<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>

<header class="mb-6">
  <h1 class="font-bold text-2xl/tight">Products</h1>
  <p>Manage the products offered for sale including descriptions and prices</p>
</header>

<%= link_to 'Add a new product', new_product_path, class: "btn" %>

<ul role="list" class="my-6 grid grid-cols-1 gap-x-6 gap-y-8 lg:grid-cols-3 xl:gap-x-8">
  <%= render @products %>
</ul>

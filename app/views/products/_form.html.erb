<%= form_with(model: product) do |form| %>
  <div class="my-4">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-input w-64", required: true %>
  </div>
  <div class="my-4">
    <%= form.label :price, "Price ($)" %>
    <%= form.number_field :price, step: 0.01, class: "form-input w-48", required: true %>
  </div>
  <div class="my-4">
    <%= form.label :unit %>
    <span class="italic">e.g. 'bucket' or 'bag'</span>
    <%= form.text_field :unit, class: "form-input w-48" %>
  </div>
  <div class="my-4">
    <%= form.label :description %>
    <%= form.rich_text_area :description, class: "form-input" %>
  </div>
  <div class="my-4">
    <%= form.label :available, "Available for sale" %>
    <%= form.check_box :available, class: "form-checkbox h-5 w-5 text-blue-600" %>
  </div>
  <div class="my-4">
    <%= form.submit 'Save this product', class: "btn btn--primary" %>
  </div>
<% end %>

<li id="<%= dom_id user %>" class="flex items-center justify-between gap-x-6 p-4">
  <div class="flex min-w-0 gap-x-4">
    <div class="hidden sm:block">
      <%= avatar_for(user) %>
    </div>
    <div class="min-w-0 flex-auto">
      <p class="font-bold leading-6 lg:text-lg"><%= user.name %></p>
      <p class="leading-5"><%= user.email %></p>
    </div>
  </div>
  <div class="flex items-center gap-x-2 lg:gap-x-4">
    <div class="hidden sm:block text-sm">
      Last login: <%= user.last_sign_in_at ? local_time_ago(user.last_sign_in_at) : 'Never' %>
    </div>
    <%= link_to "Edit", edit_user_path(user), class: "btn" %>
    <%= button_to user_path(user), method: :delete,
        class: "leading-none text-stone-600 underline hover:text-red-600",
        title: "Delete user",
        form: { data: { turbo_confirm: "Are you sure you want to delete this user and remove their access?" } } do
      %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8">
        <path fill-rule="evenodd" d="M5.47 5.47a.75.75 0 011.06 0L12 10.94l5.47-5.47a.75.75 0 111.06 1.06L13.06 12l5.47 5.47a.75.75 0 11-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 01-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 010-1.06z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>
</li>
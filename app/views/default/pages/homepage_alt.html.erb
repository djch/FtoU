<%# Ann alternative layout Dion and Mark wanted to try for the homepage hero text content %>
<div class="relative h-[75svh] isolate overflow-hidden pt-32">
  <%= content.image_tag(:hero, {resize_to_fill: [4480, 2520]}, {class: 'absolute inset-0 -z-10 h-full w-full object-cover object-center'}) %>
  <div class="absolute bottom-0 inset-x-0 w-full text-center pt-36">
    <h1 class="my-0 p-4 md:p-8 bg-stone-900/70 font-extrabold leading-tight text-2xl sm:text-3xl md:text-5xl text-white">
      <%= content(:headline) %>
    </h1>
    <div class="p-4 sm:py-6 sm:px-8 bg-white/80 backdrop-blur">
      <h2 class="my-0 text-lg leading-tight font-medium sm:text-xl md:text-2xl">
        <%= content(:subhead) %>
      </h2>
      <div class="mt-5 flex items-center gap-x-4 justify-center">
        <a href="/orders/new" class="no-underline py-2.5 px-5 rounded sm:text-lg font-bold uppercase bg-amber-700 text-white">Order online</a>
        <a href="tel:0467849053" class="no-underline py-2.5 px-4 rounded sm:text-lg font-bold uppercase bg-stone-100">Call us</a>
      </div>
    </div>
  </div>
</div>

<% repeater(:strips) do |strip| %>
  <div class="relative z-10 p-8 md:p-12 odd:bg-stone-100">
    <div class="max-w-screen-xl mx-auto flex items-center gap-10 flex-wrap-reverse md:flex-nowrap">
      <div>
        <h2 class="mb-6 text-xl md:text-2xl lg:text-3xl tracking-normal text-amber-700">
          <%= strip.content(:heading) %>
        </h2>
        <div class="prose md:prose-lg max-w-full <% if strip.content(:bg_image).present? %>prose-invert<% else %>prose-stone<% end %>">
          <%= strip.content.html :text %>
        </div>
      </div>
      <% if strip.content(:image).present? %>
        <%= strip.content.image_tag(:image, {resize_to_fill: [1000, 1000]}, {class: 'w-full h-64 md:h-full md:w-1/3 lg:w-1/4 object-cover rounded'}) %>)
      <% end %>
    </div>
    <% if strip.content(:bg_image).present? %>
      <%= strip.content.image_tag(:bg_image, {resize_to_fill: [4480, 1280]}, {class: 'absolute inset-0 -z-10 h-full w-full object-cover brightness-[0.25] contrast-125'}) %>)
    <% end %>
  </div>
<% end %>

 <%= render 'default/shared/footer' %>
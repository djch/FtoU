<% nav_items ||= Spina::Navigation.find_by(name: "main").navigation_items.roots.sorted %>
<footer class="p-8 sm:px-6 md:px-12 lg:px-16 lg:py-12 text-white bg-amber-700">
  <div class="max-w-screen-xl mx-auto grid grid-cols-4 md:gap-12 lg:gap-16">
    <div class="col-span-4 lg:col-span-2">
      <h2 class="my-4 tracking-normal font-bold text-xl">About <%= current_account.name %></h2>
      <%= current_account.content.html(:about) %>
      <div class="mt-4">
        Â© <%= current_account.name %>
        <span class="mx-1">|</span>
        Website by <%= link_to "Getbusi", 'https://www.getbusi.com?utm_campaign=designedby&utm_content=ftou' %>
      </div>
    </div>
    <div class="col-span-4 md:col-span-2 lg:col-span-1 lg:col-start-3">
      <h2 class="my-4 tracking-normal font-bold text-xl">Links</h2>
      <nav class="space-y-3">
        <% nav_items.each do |item| %>
          <%= link_to item.menu_title, item.materialized_path, class: "block leading-tight text-white underline-offset-2" %>
        <% end %>
        <%= link_to "Order Form", '/orders/new', class: "block leading-tight text-white underline-offset-2" %>
        <%= link_to "Staff", '/deliveries', class: "block leading-tight font-normal text-white underline-offset-2" %>
      </nav>
    </div>
    <div class="col-span-4 md:col-span-2 lg:col-span-1 lg:col-start-4">
      <h2 class="my-4 tracking-normal font-bold text-xl">Contact Info</h2>
      <div class="space-y-1.5 leading-snug">
        <p>
          Phone: <%= link_to current_account.phone, "tel:#{current_account.phone}" %>
        </p>
        <p>
          Email: <%= link_to current_account.email, "mailto:#{current_account.email}" %>
        </p>
        <p>
          Address: <%= current_account.address %>, <%= current_account.city %>, Tasmania <%= current_account.postal_code %>
        </p>
        <p>
          ABN: <%= current_account.content(:abn) %>
        </p>
      </div>
      <p class="mt-4">
        <span class="font-semibold">Hours:</span><br><%= current_account.content(:hours) %>
      </p>
    </div>
  </div>
</footer>
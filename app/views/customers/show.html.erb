<header class="mb-6">
  <h1 class="font-bold text-2xl/tight"><%= @customer.name %></h1>
  <p>Customer since <%= local_time_ago(@customer.created_at) %></p>
  <div class="my-6 flex items-center gap-x-5">
    <%= link_to "Edit details", edit_customer_path(@customer), class: "btn" %>
    <%= button_to 'Destroy record', @customer,
          method: :delete,
          class: "btn",
          form: { data: { turbo_confirm: "Are you sure you want to permanently delete the customer and any orders on record?" } }
    %>
  </div>
</header>
<dl class="mt-6 grid grid-cols-1 sm:grid-cols-2 lg:text-lg">
  <div class="border-t border-stone-400/20 px-4 py-6 sm:col-span-1 sm:px-0">
    <dt class="font-bold leading-6">Full name</dt>
    <dd class="mt-1 leading-6 sm:mt-2"><%= @customer.name %></dd>
  </div>
  <div class="border-t border-stone-400/20 px-4 py-6 sm:col-span-1 sm:px-0">
    <dt class="font-bold leading-6">Phone number</dt>
    <dd class="mt-1 leading-6 sm:mt-2"><%= @customer.phone %></dd>
  </div>
  <div class="border-t border-stone-400/20 px-4 py-6 sm:col-span-1 sm:px-0">
    <dt class="font-bold leading-6">Email address</dt>
    <dd class="mt-1 leading-6 sm:mt-2">
      <%= mail_to @customer.email %>
    </dd>
  </div>
  <div class="border-t border-stone-400/20 px-4 py-6 sm:col-span-1 sm:px-0">
    <dt class="font-bold leading-6">Delivery address</dt>
    <dd class="mt-1 leading-6 sm:mt-2">
      <%= @customer.street_address %>
      <br><%= @customer.town %>, <%= @customer.state %>
      <br><%= @customer.postcode %>
    </dd>
  </div>
  <div class="border-t border-stone-400/20 px-4 py-6 sm:col-span-2 sm:px-0">
    <dt class="font-bold leading-6">Notes</dt>
    <dd class="mt-1 leading-6 sm:mt-2">
      <%= @customer.delivery_notes %>
    </dd>
  </div>
  <div class="border-t border-stone-400/20 px-4 py-6 sm:col-span-2 sm:px-0">
    <dt class="font-bold leading-6">Orders</dt>
    <dd class="mt-2">
      <ul role="list" class="divide-y divide-stone-100 border border-stone-400/50">
        <li class="flex items-center justify-between py-4 pl-4 pr-5 leading-6">
          <div class="flex w-0 flex-1 items-center">
            <svg class="h-5 w-5 flex-shrink-0 text-stone-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M15.621 4.379a3 3 0 00-4.242 0l-7 7a3 3 0 004.241 4.243h.001l.497-.5a.75.75 0 011.064 1.057l-.498.501-.002.002a4.5 4.5 0 01-6.364-6.364l7-7a4.5 4.5 0 016.368 6.36l-3.455 3.553A2.625 2.625 0 119.52 9.52l3.45-3.451a.75.75 0 111.061 1.06l-3.45 3.451a1.125 1.125 0 001.587 1.595l3.454-3.553a3 3 0 000-4.242z" clip-rule="evenodd" />
            </svg>
            <div class="ml-4 flex min-w-0 flex-1 gap-2">
              <span class="truncate font-medium">Fake order description</span>
              <span class="flex-shrink-0 text-stone-400">$0.00</span>
            </div>
          </div>
          <div class="ml-4 flex-shrink-0">
            <a href="#" class="font-medium text-orange-700">View</a>
          </div>
        </li>
      </ul>
    </dd>
  </div>
</dl>
<div class="max-w-[480px] mx-auto px-8 py-6 bg-stone-400/20">

  <h2 class="text-xl text-center mb-6">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="my-4">
      <%= f.label :password, "New password" %>
      <% if @minimum_password_length %>
        <em>At least <%= @minimum_password_length %> characters, please</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "block w-full" %>
    </div>

    <div class="my-4">
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full" %>
    </div>

    <div class="mt-8 mb-4">
      <%= f.submit "Change my password", class: "btn btn--primary block w-full text-lg" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>

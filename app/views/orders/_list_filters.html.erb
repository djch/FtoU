<%= form_with url: orders_path, method: :get, local: true, class: "flex flex-wrap items-center gap-2" do |f| %>

  <!-- By date -->
  <%= f.label :date, "Filter by date placed", class: "sr-only" %>
  <%= f.select :date, options_for_select([
    ['Placed any time', ''],
    ['Placed today', 'today'],
    ['Placed yesterday', 'yesterday'],
    ['Placed this week', 'this_week'],
    ['Placed last week', 'last_week'],
    ['Placed this month', 'this_month'],
    ['Placed last month', 'last_month']
  ], params[:date]), {}, { onchange: 'this.form.submit();', class: 'form-input w-auto pr-10' } %>

  <!-- By Status -->
  <%= f.label :status, "Filter by status", class: "sr-only" %>
  <%= f.select :status, options_for_select([['Any status', '']] + %w(pending confirmed cancelled delivered).map { |status| [status.capitalize, status] }, params[:status]), {}, { onchange: 'this.form.submit();', class: 'form-input w-auto pr-10' } %>

  <!-- By Paid -->
  <%= f.label :paid, "Filter by paid", class: "sr-only" %>
  <%= f.select :paid, options_for_select([['Paid or unpaid', ''], ['Paid', 'true'], ['Unpaid', 'false']], params[:paid]), {}, { onchange: 'this.form.submit();', class: 'form-input w-auto pr-10' } %>
<% end %>
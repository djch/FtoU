<table class="w-full whitespace-nowrap text-left leading-6">
  <colgroup>
    <col class="w-full">
    <col>
    <col>
    <col>
  </colgroup>
  <thead class="border-b border-stone-300 dark:border-stone-500">
    <tr>
      <th scope="col" class="px-0 py-3 font-bold">
        <% if @pdf %>
          Items
        <% else %>
          <span class="print:hidden">Items</span>
          <span class="hidden print:inline uppercase">
            The following items in good order and condition
          </span>
        <% end %>
      </th>
      <th scope="col" class="py-3 pl-8 pr-0 text-right font-semibold">Qty</th>
      <th scope="col" class="py-3 pl-8 pr-0 text-right font-semibold">Price</th>
    </tr>
  </thead>
  <tbody id="order-items-list">
    <%= render partial: 'orders/item', collection: @order_items, as: :order_item %>
  </tbody>
  <tfoot class="border-t border-stone-300 dark:border-stone-500" id="order-totals">
    <%= render partial: 'orders/items_totals', locals: { order: @order } %>
  </tfoot>
</table>
